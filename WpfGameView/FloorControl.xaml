<UserControl x:Class="WpfGameView.FloorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGameView"
             xmlns:view="clr-namespace:Sokoban.View;assembly=Sokoban"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="35">
    <Grid>
        <Image x:Name="BackgroundImage" Height="35" Margin="0" Width="35" Source="pack://application:,,,/Sokoban;component/Resources/block.png" />
        <Image x:Name="OverlayImageN" Height="35" Margin="0" Width="35" />
        <Image x:Name="OverlayImageS" Height="35" Margin="0" Width="35" />
        <Image x:Name="OverlayImageW" Height="35" Margin="0" Width="35" />
        <Image x:Name="OverlayImageE" Height="35" Margin="0" Width="35" />
    </Grid>
</UserControl>

